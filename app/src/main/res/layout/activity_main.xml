<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_decimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="186dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/decimal"
        app:layout_constraintBottom_toTopOf="@+id/editText_Decimal"
        app:layout_constraintEnd_toEndOf="@+id/editText_Decimal"
        app:layout_constraintStart_toStartOf="@+id/editText_Decimal" />

    <EditText
        android:id="@+id/editText_Decimal"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="@string/decimal_value"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_Converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="139dp"
        android:text="@string/converter"
        app:layout_constraintBottom_toTopOf="@+id/text_binary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Decimal" />

    <TextView
        android:id="@+id/text_binary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/binary"
        app:layout_constraintEnd_toEndOf="@+id/editText_Binary"
        app:layout_constraintStart_toStartOf="@+id/editText_Binary"
        app:layout_constraintBottom_toTopOf="@+id/editText_Binary" />

    <EditText
        android:id="@+id/editText_Binary"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="@string/binary_value"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>